# Server Configuration
NODE_ENV=development
PORT=3000
SOCKET_PORT=3001

# Database (Port 5433 to avoid conflicts with other PostgreSQL instances)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=famtracker
DB_USER=famtracker
DB_PASSWORD=change_me_in_production

# Redis (Port 6380 to avoid conflicts with other Redis instances)
REDIS_HOST=localhost
REDIS_PORT=6380

# JWT Authentication
JWT_SECRET=change_me_to_random_string_in_production
JWT_EXPIRES_IN=7d

# Location Settings
MAX_LOCATION_AGE_DAYS=30
SPEED_LIMIT_RADIUS_METERS=20

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
